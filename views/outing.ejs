<% if(outing != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- outing.name %></li>
    </ol>
  </nav>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/uploads/<%- outing.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- outing.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- outing.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- outing.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Description</h4>
          <%- outing.description %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <% if(isAuthor) { %>
            <a href="/edit/<%=outing._id%>" class="btn btn-primary">Edit</a>
            <a href="/delete/<%=outing._id%>" class="btn btn-danger">Delete</a>
          <% } %>
        </div>
      </div>
      <% if(isLoggedIn) { %><div class="col-md-3 text-end">
        <form method="POST" action="/outing/like/<%= outing._id %>">   
          <button class="btn btn-info"><% if(isLiked) { %>
            unLike
          <% } else { %>
            <a>Like</a>
            <% } %> </button>
        </form>
        <p>Liked by <%= likes %> people</p>
      </div> 
    </div>
    <div class="col-md-3 text-end">
      <form method="POST" action="/outing/comment/<%= outing._id %>">   
        <input
        type="text"
        name="commentField"
        class="form-control"
        placeholder="Write a comment...."
        aria-label="Search"
      />
      <button type="submit" class="btn btn-dark">Post</button>
      </form>
    </div>
    <% comments.forEach(function(comment, index){ %>
        <div class="category__img category__img--small shadow" style="display: flex;flex-direction: column;">
          <div class="pt-1"><%= comment.userName %></div>
          <div class="pt-2"><%= comment.comment %></div>
        </div>
      <% }) %>
    <% } %>

  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>